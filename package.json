{
  "name": "pkg",
  "version": "4.5.1",
  "description": "Package your Node.js project into an executable",
  "main": "lib-es5/index.js",
  "license": "MIT",
  "repository": "vercel/pkg",
  "bin": {
    "pkg": "lib-es5/bin.js"
  },
  "files": [
    "lib-es5/*.js",
    "dictionary/*.js",
    "prelude/*.js"
  ],
  "babel": {
    "plugins": [
      "@babel/plugin-transform-async-to-generator",
      "@babel/plugin-transform-runtime"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "@babel/parser": "7.13.12",
    "@babel/runtime": "7.13.10",
    "chalk": "^4.1.0",
    "escodegen": "^2.0.0",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "into-stream": "^6.0.0",
    "minimist": "^1.2.5",
    "multistream": "^4.1.0",
    "pkg-fetch": "2.6.9",
    "prebuild-install": "6.0.1",
    "progress": "^2.0.3",
    "tslib": "2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.13.10",
    "@babel/core": "7.13.10",
    "@babel/eslint-parser": "7.13.10",
    "@babel/plugin-transform-async-to-generator": "7.13.0",
    "@babel/plugin-transform-runtime": "7.13.10",
    "@babel/preset-env": "7.13.12",
    "@babel/register": "7.13.8",
    "@babel/types": "7.13.12",
    "@types/escodegen": "0.0.6",
    "@types/fs-extra": "9.0.8",
    "@types/node": "14.14.35",
    "@types/resolve": "1.20.0",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.22.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.22.1",
    "json-stable-stringify": "^1.0.1",
    "lint-staged": ">=10",
    "mkdirp": "^1.0.4",
    "prettier": "2.2.1",
    "simple-git-hooks": ">=2.2.0",
    "rimraf": "^3.0.2",
    "typescript": "4.2.3"
  },
  "peerDependencies": {
    "node-notifier": ">=9.0.1"
  },
  "peerDependenciesMeta": {
    "node-notifier": {
      "optional": true
    }
  },
  "scripts": {
    "clean": "rimraf lib-es5",
    "build": "npm run clean && tsc",
    "start": "tsc --watch",
    "lint": "eslint lib prelude || true",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test:no-npm",
    "test": "npm run build && node test/test.js node14 no-npm && node test/test.js node12 no-npm && node test/test.js node10 no-npm && node test/test.js host only-npm",
    "test:no-npm": "node test/test.js host no-npm"
  },
  "greenkeeper": {
    "emails": false,
    "ignore": [
      "pkg-fetch"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,css,md,json}": "prettier --write"
  }
}
